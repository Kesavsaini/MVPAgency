---
import Container from "./Container.astro"
import Topic from "./Topic.astro";

const pricingPlan = {
    title: "Your MVP",
    originalPrice: "$699",
    price: "$199",
    duration: "",
    features: [
        "Custom Web Application",
        "Features Implementation",
        "User Authentication",
        "Responsive Design",
        "Post production Support"
    ],
    buttonText: "Schedule a call"
}
---
<Container>
<div class="relative flex flex-col items-center md:flex-row pt-4 md:pt-6">
    <Topic title="Pricing" description="Budget-friendly pricing for your MVP development needs"/>
</div>

<div class="flex-row items-center py-3 md:py-5 w-full" id="pricing">
    <div class="flex justify-center w-full px-3 md:px-8">
        <div class="h-auto px-4 md:px-12 py-6 md:py-8 bg-white rounded-[45px] shadow-card border border-zinc-900 flex-col justify-start items-start gap-2 md:gap-2.5 inline-flex text-black w-full md:w-[90%] lg:w-[85%] bg-red-500">
            <div class="flex-col justify-start items-start gap-4 md:gap-5 flex w-full">
                <div class="self-stretch justify-between items-center flex">
                    <div class="flex-col justify-end items-start">
                        <div class="text-2xl md:text-4xl font-medium mb-0.5 md:mb-1">{pricingPlan.title}</div>
                        <div class="flex items-end gap-2">
                            <div class="flex items-end">
                                <span class="text-4xl md:text-6xl font-bold">{pricingPlan.price}</span>
                                <span class="text-lg md:text-2xl text-gray-600 ml-1">{pricingPlan.duration}</span>
                            </div>
                            <div class="flex flex-col items-start justify-center mb-2">
                                <span class="text-xl md:text-2xl text-gray-500 line-through">{pricingPlan.originalPrice}</span>
                                <span class="text-sm md:text-base text-green-600 font-medium">First 5 places only!</span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="w-full border border-black"/>
                <div class="w-full">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-4">
                        {pricingPlan.features.map((feature) => (
                            <div class="flex items-center bg-gray-50 rounded-xl p-2.5 md:p-4">
                                <svg class="w-5 h-5 md:w-7 md:h-7 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <p class="text-base md:text-xl">{feature}</p>
                            </div>
                        ))}
                    </div>
                </div>
                <button class="w-full px-6 md:px-8 py-4 md:py-5 mt-2 md:mt-4 bg-zinc-900 hover:bg-white rounded-2xl text-center text-white hover:text-black border text-lg md:text-2xl font-normal transition-colors" onclick="window.location.href = 'https://cal.com/kesavsaini/mvp-call'">
                    {pricingPlan.buttonText}
                </button>
            </div>
        </div>
    </div>
</div>
</Container>